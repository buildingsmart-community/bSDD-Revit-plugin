<Page x:Class="DockableDialog.Forms.bSDDPanel"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Dockable Dialogs"  Height="auto" Width="200"
        x:Name="DockableDialogs"  Background="LightGray" Loaded="DockableDialogs_Loaded">
    <Grid Name="PanelGrid">
        <DockPanel>
            <ComboBox DockPanel.Dock="Top" Name="SM" SelectionChanged="SM_SelectionChanged"/>
            <Label DockPanel.Dock="Top" x:Name="lb1" Content="Selected families:"/>
            <ListBox 
                x:Name="lbxSelection"
                ItemsSource="{Binding Elements}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FamName}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        
        <StackPanel 
            Orientation="Vertical" 
            Height="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=StackPanel}, Path=ActualHeight}">
           
        </StackPanel>
    </Grid>
</Page>






